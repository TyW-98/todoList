<%- include('headers'); -%>

<div class="header">
  <h1><%= listType %></h1>
</div>

<div class="task-list">
  <% for (var i = 0; i < taskList.length; i++) { %>
  <div class="task">
    <div class="task-text">
      <p><%= taskList[i] %></p>
      <span class="created-date" data-original-date="<%= todayFullDate %>"
        >(<%= todayFullDate %>)</span
      >
    </div>
    <div class="task-info">
      <input
        type="checkbox"
        class="task-checkbox"
        onchange="toggleLineThrough(this)"
      />
    </div>
  </div>
  <% } %>

  <form action="/" method="post" class="input-form">
    <input
      type="text"
      name="newTask"
      placeholder="Enter New Task"
      autocomplete="off"
    />
    <button type="submit" name="submitBtn" value=<%= listType %>>+</button>
  </form>
</div>
<%- include('footer'); -%>